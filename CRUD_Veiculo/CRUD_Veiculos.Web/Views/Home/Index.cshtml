@model IEnumerable<Veiculo>

@{
    ViewBag.Title = "Veículos";
}

<h2 class="subheader-text">@ViewBag.Title</h2>

<a class="btn btn-success" href="/Home/Create"><i class='bx bx-plus'></i> Novo Veículo</a>

<table class="table">
    <thead>
        <tr>
            <th>Chassi</th>
            <th>Montadora</th>
            <th>Modelo</th>
            <th>Placa</th>
            <th>Ano de Fabricação</th>
            <th>Editar | Detalhes | Deletar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var veiculo in Model)
        {
            <tr>
                <td>@veiculo.Chassi</td>
                <td>@veiculo.Montadora</td>
                <td>@veiculo.Modelo</td>
                <td>@veiculo.Placa</td>
                <td>@veiculo.AnoFabricacao</td>
                <td>
                    <a href="/Home/Edit/@veiculo.Id" class="btn btn-primary"><i class='bx bxs-edit'></i></a> |
                    <a href="/Home/Details/@veiculo.Id" class="btn btn-secondary"><i class='bx bx-search'></i></a> |
                    <a href="/Home/Delete/@veiculo.Id" class="btn btn-danger" onclick="return confirm('Tem certeza que gostaria de deletar esse item?')"><i class='bx bxs-trash'></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


