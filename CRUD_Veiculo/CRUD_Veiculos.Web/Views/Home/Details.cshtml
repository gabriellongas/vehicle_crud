@model Veiculo

@{
    ViewBag.Title = "Detalhes do Veículo";
}

<h2 class="subheader-text">@ViewBag.Title</h2>

<div>
    
    <dl class="dl-horizontal">
        <dt>Chassi</dt>
        <dd>@Model.Chassi</dd>

        <dt>Montadora</dt>
        <dd>@Model.Montadora</dd>

        <dt>Modelo</dt>
        <dd>@Model.Modelo</dd>

        <dt>Placa</dt>
        <dd>@Model.Placa</dd>

        <dt>Ano de Fabricação</dt>
        <dd>@Model.AnoFabricacao</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <a class="btn btn-secondary" href="javascript:history.back()"><i class='bx bx-arrow-back'></i> Retornar</a>
    }
</div>
